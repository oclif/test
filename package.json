  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.4",
    "@oclif/prettier-config": "^0.2.1",
    "@types/cli-progress": "^3.11.5",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "commitlint": "^18.4.4",
    "eslint": "^8.56.0",
